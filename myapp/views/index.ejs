<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

    <title><%= title %></title>

    <!-- Font Awesome Stylesheet -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />
    <!-- Bootstrap Grid Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />
    <!-- Own Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>

  <body>
    <%- include('./partials/header') %>

    <!-- Banner -->
    <div class="banner"></div>
    <!-- /Banner -->

    <!-- Novedades -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Productos</h2>
        </div>

        <!-- Mostrar los productos -->
        <% for (let i = 0; i < listado.length; i++) { %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/product/detalle/<%= listado[i].id %>">
                <figure class="product-box_image">
                  <img
                    src="/images/products/<%= listado[i].imagen %>"
                    alt="<%= listado[i].nombre %>"
                  />
                </figure>
              </a>

              <article class="product-box_data">
                <a href="/product/detalle/<%= listado[i].id %>">
                  <h2><%= listado[i].nombre %></h2>
                  <p><%= listado[i].descripcion %></p>
                </a>
                <p>
                  <a href="/user/profile"><%= listado[i].usuario.email %></a>
                </p>
              </article>
            </section>
          </div>
        <% } %>
      </div>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>
