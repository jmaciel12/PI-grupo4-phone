<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />
    <title>Detalle de Producto</title>

    <!-- Font Awesome Stylesheet -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />
    <!-- Bootstrap Grid Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />
    <!-- Own Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>
  <body>
    <%- include('./partials/header') %>

    <div class="container products-wrapper">
      <div class="d-flex align-items-center">
        <h2 class="products-title"><%= producto.nombre %></h2>
        <p class="product-detail-description">
          <a href="/product/add">Editar</a>
        </p>
      </div>

      <div class="product-detail">
        <div class="row">
          
          <article class="col-12 col-lg-8 product-detail-info">
            <img
              src="<%= producto.imagen %>"
              alt="<%= producto.nombre %>"
              class="product-detail-img"
            />
            <p class="product-detail-description">
              <%= producto.descripcion %>
            </p>
          </article>

        
          <div class="col-12 col-lg-4">
            <section class="comments">
              <h3>Comentarios</h3>

              <% for (let i = 0; i < comentarios.length; i++) { %>
              <article>
                <img
                  src="<%= comentarios[i].imagenPerfil %>"
                  alt="Foto de <%= comentarios[i].usuario %>"
                />
                <div class="data">
                  <p class="user">
                    <strong><a href="/user/profile"><%= comentarios[i].usuario %></a> :</strong>
                    <%= comentarios[i].texto %>
                  </p>
                </div>
              </article>
              <% } %>
            </section>

            <form class="form" action="/product/detalle" method="get">
              <input
                class="form-input"
                type="text"
                placeholder="Agregar comentario"
              />
              <button type="submit" class="buy-now-button">
                AGREGAR COMENTARIO
              </button>
            </form>

            <hr />
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>
