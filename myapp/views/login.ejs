<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

  <title>Login</title>
  <!-- Font Awesome Stylesheet -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
  <!-- Bootstrap Grid Stylesheet -->
  <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />
  <!-- Own Stylesheet -->
  <link rel="stylesheet" href="/stylesheets/app.css" />
</head>

<body>
  <%- include('./partials/header') %>
    <!-- Novedades -->



    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Ingresar</h2>
        </div>
        <div class="col-12">
          <form action="/users/login" method="POST" class="login-form">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" required />

            <label for="password">Contrase√±a:</label>
            <input type="password" name="password" id="password" required />

            <button type="submit">Ingresar</button>
          </form>

          <% if (errorLogin) { %>
            <p style="color: white;">
              <%= errorLogin %>
            </p>
            <% } %>

        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>
</body>

</html>